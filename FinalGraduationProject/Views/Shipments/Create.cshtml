@model FinalGraduationProject.Models.Order
@{
    ViewData["Title"] = "Choose Shipping";
    var shippingMethods = ViewBag.ShippingMethods as List<FinalGraduationProject.Models.ShippingMethod>;
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary">📦 Shipping Details</h2>

    <!-- ملخص الطلب -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-info text-white">
            <strong>Order Summary</strong>
        </div>
        <div class="card-body">
            <table class="table table-bordered text-center">
                <thead class="table-light">
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@(item.Price* item.Quantity)</td>
                        </tr>
                    }
                </tbody>
                <tfoot class="table-light">
                    <tr>
                        <th colspan="3" class="text-end">Total:</th>
                        <th>@Model.TotalAmount.ToString("C")</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <!-- اختيار وسيلة الشحن -->
    <form asp-action="Create" method="post">
        <input type="hidden" name="orderId" value="@Model.Id" />

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-success text-white">
                <strong>Choose Shipping Method</strong>
            </div>
            <div class="card-body">
                @if (shippingMethods != null && shippingMethods.Any())
                {
                    @foreach (var method in shippingMethods)
                    {
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="radio" name="shippingMethodId" value="@method.Id" required />
                            <label class="form-check-label">
                                @method.Name - @method.Cost.ToString("C")
                            </label>
                        </div>
                    }
                }
                else
                {
                    <p class="text-danger">⚠️ No shipping methods available.</p>
                }
            </div>
        </div>

        <button type="submit" class="btn btn-primary btn-lg">
            🚚 Confirm & Ship
        </button>
    </form>
</div>
