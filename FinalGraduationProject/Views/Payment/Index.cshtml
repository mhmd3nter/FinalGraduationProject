@model FinalGraduationProject.Models.Order

@{
    ViewData["Title"] = "Payment Options";
}

<div class="container mt-4">
    <h2><i class="fas fa-credit-card"></i> Choose Payment Method</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
        </div>
    }

    <div class="row">
        <!-- Order Summary -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-receipt"></i> Order Summary</h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.OrderItems)
                    {
                        <div class="d-flex justify-content-between">
                            <span>@item.Product.Name x @item.Quantity</span>
                            <span>$@(item.Price* item.Quantity)</span>
                        </div>
                    }
                    <hr>
                    @{
                        var subtotal = Model.OrderItems.Sum(oi => oi.Price * oi.Quantity);
                        var tax = subtotal * 0.14m;
                        var shipping = subtotal > 100 ? 0 : 10;
                    }
                    <div class="d-flex justify-content-between">
                        <span>Subtotal:</span>
                        <span>$@subtotal.ToString("F2")</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Tax (14%):</span>
                        <span>$@tax.ToString("F2")</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Shipping:</span>
                        <span>@(shipping == 0 ? "FREE" : $"${shipping:F2}")</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between fw-bold h5">
                        <span>Total:</span>
                        <span>$@Model.TotalAmount.ToString("F2")</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payment Methods -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-money-bill-wave"></i> Payment Methods</h5>
                </div>
                <div class="card-body">
                    <!-- Cash on Delivery -->
                    <div class="payment-option mb-3">
                        <form class="payment-form" asp-action="ProcessPayment" method="post">
                            <input type="hidden" name="orderId" value="@Model.Id" />
                            <input type="hidden" name="paymentMethod" value="Cash" />
                            <button type="button" class="btn btn-outline-success w-100 p-3 payment-btn">
                                <i class="fas fa-money-bill"></i>
                                <strong>Cash on Delivery</strong>
                            </button>

                        </form>
                    </div>

                    <!-- Paymob -->
                    <div class="payment-option mb-3">
                        <form class="payment-form" asp-action="ProcessPayment" method="post">
                            <input type="hidden" name="orderId" value="@Model.Id" />
                            <input type="hidden" name="paymentMethod" value="Paymob" />
                            <button type="button" class="btn btn-outline-primary w-100 p-3 payment-btn">
                                <i class="fas fa-credit-card"></i>
                                <strong>Pay with Paymob</strong>
                            </button>
                           
                        </form>
                    </div>

                    <a href="@Url.Action("Index", "Carts")" class="btn btn-secondary w-100">
                        <i class="fas fa-arrow-left"></i> Back to Cart
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    (function () {
        document.querySelectorAll('.payment-form').forEach(function (form) {
            const btn = form.querySelector('.payment-btn');
            const paymentMethod = form.querySelector('input[name="paymentMethod"]').value;
            const orderId = form.querySelector('input[name="orderId"]').value;

            btn.addEventListener('click', function (e) {
                if (paymentMethod === "Cash") {
                    // Redirect to AddAddress for Cash on Delivery
                    e.preventDefault();
                    window.location.href = `/Payment/AddAddress?orderId=${orderId}&paymentMethod=Cash`;
                    return;
                }
                // For Paymob, keep the old behavior (show address field, then submit)
                  if (paymentMethod === "Paymob") {
                    // Redirect to AddAddress for Paymob
                    e.preventDefault();
                    window.location.href = `/Payment/AddAddress?orderId=${orderId}&paymentMethod=Paymob`;
                    return;
                }
                form.submit();
            });
        });
    })();
</script>
