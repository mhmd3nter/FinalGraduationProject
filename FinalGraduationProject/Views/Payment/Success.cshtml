@model FinalGraduationProject.Models.Order

@{
    ViewData["Title"] = "Payment Successful";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    <!-- Success Icon -->
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                    </div>

                    <!-- Success Message -->
                    <h2 class="text-success">Payment Successful!</h2>
                    <p class="lead">Thank you for your order. Your payment has been processed.</p>

                    <!-- Order Details -->
                    <div class="card mt-4">
                        <div class="card-header">
                            <h5><i class="fas fa-receipt"></i> Order Details</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <strong>Order Number:</strong> #@Model.Id
                                </div>
                                <div class="col-sm-6">
                                    <strong>Order Date:</strong> @Model.OrderDate.ToString("MMM dd, yyyy")
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-sm-6">
                                    <strong>Total Amount:</strong> $@Model.TotalAmount
                                </div>
                                <div class="col-sm-6">
                                    <strong>Status:</strong> 
                                    <span class="badge bg-success">@Model.Status</span>
                                </div>
                            </div>

                            <!-- Items Ordered -->
                            <h6 class="mt-4">Items Ordered:</h6>
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Quantity</th>
                                            <th>Price</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.OrderItems)
                                        {
                                            <tr>
                                                <td>@item.Product.Name</td>
                                                <td>@item.Quantity</td>
                                                <td>$@item.Price</td>
                                                <td>$@(item.Price * item.Quantity)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Shipping Address (newly added section) -->
                    @if (Model.Address != null)
                    {
                        <div class="card mt-4">
                            <div class="card-header">
                                <h5><i class="fas fa-map-marker-alt"></i> Shipping Address</h5>
                            </div>
                            <div class="card-body">
                                <p>
                                    <strong>Street:</strong> @Model.Address.Street <br />
                                    <strong>City:</strong> @Model.Address.City <br />
                                    <strong>State:</strong> @Model.Address.State <br />
                                    <strong>Postal Code:</strong> @Model.Address.PostalCode <br />
                                    <strong>Country:</strong> @Model.Address.Country
                                </p>
                            </div>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Products")" class="btn btn-primary">
                            <i class="fas fa-shopping-bag"></i> Continue Shopping
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                            <i class="fas fa-home"></i> Go to Home
                        </a>
                    </div>

                    <!-- What's Next -->
                    <div class="alert alert-info mt-4">
                        <h6><i class="fas fa-info-circle"></i> What's Next?</h6>
                        <p class="mb-0">
                            You will receive an email confirmation shortly. 
                            Your order will be processed and shipped within 1-2 business days.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>