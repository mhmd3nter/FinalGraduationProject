@model FinalGraduationProject.Models.Order

@{
    ViewData["Title"] = "Order Details (Admin)";
}

<div class="container py-5">
    <h2 class="fw-bold text-primary mb-4">
        <i class="fas fa-receipt me-2"></i> Order #@Model.Id Details
    </h2>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <p><strong>User ID:</strong> @Model.UserId</p>
            <p><strong>User Name:</strong> @Model.User.Name</p>
            <p><strong>Date:</strong> @Model.OrderDate.ToString("yyyy-MM-dd HH:mm")</p>
            <p>
                <strong>Status:</strong>
                <span class="badge
                    @(Model.Status == "Completed" ? "bg-success" :
                                            Model.Status == "Pending" ? "bg-warning text-dark" :
                                            Model.Status == "Cancelled" ? "bg-danger" : "bg-secondary")">
                    @Model.Status
                </span>
            </p>
            <p><strong>Total:</strong> $@Model.TotalAmount.ToString("F2")</p>
        </div>
    </div>

    <h4 class="fw-semibold mb-3">
        <i class="fas fa-box-open me-2"></i> Items
    </h4>
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Product</th>
                    <th>Size</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>@item.ProductSize.Product.Name</td>
                        <td>@item.ProductSize.Size.Name</td>
                        <td>@item.Quantity</td>
                        <td>$@item.Price.ToString("F2")</td>
                        <td>$@(item.Price* item.Quantity)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Manage"
           class="btn btn-secondary d-flex align-items-center gap-2 w-auto">
            <i class="fas fa-arrow-left"></i>
            <span>Back to Orders</span>
        </a>

        @if (User.IsInRole("Admin"))
        {
            <a asp-action="EditStatus" asp-route-id="@Model.Id"
               class="btn btn-warning d-flex align-items-center gap-2 w-auto justify-content-center">
                <i class="fas fa-edit"></i>
                <span>Edit Status</span>
            </a>
        }
    </div>
</div>

