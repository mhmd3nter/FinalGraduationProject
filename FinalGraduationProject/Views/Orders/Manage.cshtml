@model IEnumerable<FinalGraduationProject.Models.Order>

@{
    ViewData["Title"] = "Manage Orders";
}

<h2>All Orders</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order #</th>
            <th>User</th>
            <th>Date</th>
            <th>Total</th>
            <th>Status</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.UserId</td>
            <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
            <td>$@order.TotalAmount.ToString("F2")</td>
            <td>@order.Status</td>
            <td>
                <a asp-action="AdminDetails" asp-route-id="@order.Id" class="btn btn-sm btn-info">View</a>
            </td>
        </tr>
    }
    </tbody>
</table>
