@model IEnumerable<FinalGraduationProject.Models.Order>

@if (User.IsInRole("Admin"))
{
    <div class="alert alert-info mt-4">
        <i class="fas fa-info-circle"></i> Admins don’t have orders.
    </div>
}
else
{
    <div class="container my-4">
        <h2 class="mb-4">My Orders</h2>

        <div class="row g-3">
            @foreach (var order in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h5 class="card-title mb-0">Order #@order.Id</h5>
                                    <small class="text-muted">@order.OrderDate.ToString("g", System.Globalization.CultureInfo.CurrentCulture)</small>
                                </div>
                                <span class="badge @(order.Status == "Pending" ? "bg-warning text-dark" : order.Status == "Confirmed" ? "bg-success" : "bg-secondary")">
                                    @order.Status
                                </span>
                            </div>

                            <p class="mt-2 mb-1"><strong>Total:</strong> @order.TotalAmount.ToString("C")</p>

                            <div class="mt-auto">
                                <details class="mb-2">
                                    <summary class="small text-muted">Items (@order.OrderItems?.Count)</summary>
                                    <ul class="list-unstyled small mt-2">
                                        @foreach (var it in order.OrderItems)
                                        {
                                            <li class="d-flex justify-content-between align-items-center py-1 border-bottom">
                                                <div>
                                                    <div>@it.Product?.Name</div>
                                                    <small class="text-muted">Size: @it.ProductSize?.Size?.Name</small>
                                                </div>
                                                <div class="text-end">
                                                    <div>@it.Quantity × @it.Price.ToString("C")</div>
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                </details>

                                @if (order.Address != null)
                                {
                                    <div class="border rounded p-2 mb-2 bg-light small">
                                        <div class="fw-semibold">Delivery address</div>
                                        <div>@order.Address.Street</div>
                                        <div>@order.Address.City, @order.Address.State @order.Address.PostalCode</div>
                                    </div>
                                }

                                <div class="d-flex gap-2">
                                    <a class="btn btn-outline-primary btn-sm flex-fill"
                                       asp-controller="Orders"
                                       asp-action="Details"
                                       asp-route-id="@order.Id">
                                        Details
                                    </a>

                                    @if (order.Status == "Pending")
                                    {
                                        <a class="btn btn-outline-info btn-sm flex-fill"
                                           asp-controller="Carts"
                                           asp-action="LoadFromOrder"
                                           asp-route-orderId="@order.Id">
                                            <i class="fas fa-shopping-cart me-2"></i> Continue Order
                                        </a>
                                    }


                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <form asp-controller="Orders" asp-action="ClearCancelledOrders" method="post" class="mt-4 text-end">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger btn-sm">
                <i class="fas fa-trash-alt"></i> Clear Cancelled Orders
            </button>
        </form>
    </div>


}

