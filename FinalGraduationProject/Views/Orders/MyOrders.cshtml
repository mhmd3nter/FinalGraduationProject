@model IEnumerable<FinalGraduationProject.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<main class="page py-5" style="background:#f8f9fa;">
    <div class="container">
        <!-- العنوان -->
        <div class="text-center mb-5">
            <h1 class="fw-bold text-primary">@ViewData["Title"]</h1>
            <p class="text-muted fs-5">Track and manage all your orders</p>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center shadow-sm">
                <i class="fas fa-box-open me-2"></i> You have no orders yet.
            </div>
        }
        else
        {
            <div class="table-responsive shadow-sm rounded bg-white p-3">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Order #</th>
                            <th scope="col">Date</th>
                            <th scope="col">Total</th>
                            <th scope="col">Status</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@order.Id</td>
                                <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    <span class="fw-bold text-price">
                                        $@order.TotalAmount.ToString("F2")
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-primary bg-opacity-75">@order.Status</span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details"
                                       asp-route-id="@order.Id"
                                       class="btn btn-sm btn-outline-primary me-2">
                                        <i class="fas fa-eye"></i> View
                                    </a>

                                    @if (order.Status == "Confirmed")
                                    {
                                        <form asp-action="Delete"
                                              asp-route-id="@order.Id"
                                              method="post"
                                              style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit"
                                                    class="btn btn-sm btn-danger me-2"
                                                    onclick="return confirm('Are you sure you want to delete this order?');">
                                                <i class="fas fa-trash-alt"></i> Delete
                                            </button>
                                        </form>
                                    }

                                    @if (order.Status == "Pending")
                                    {
                                        <form asp-action="Cancel"
                                              asp-route-id="@order.Id"
                                              method="post"
                                              style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit"
                                                    class="btn btn-sm btn-outline-danger"
                                                    onclick="return confirm('Are you sure you want to cancel this order?');">
                                                <i class="fas fa-times"></i> Cancel
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</main>

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    .page {
        min-height: 80vh;
    }

    .text-price {
        color: #8B4513; /* نفس اللون بتاع السعر فى صفحة المنتجات */
    }

    .table-hover tbody tr:hover {
        background-color: #f2f2f2;
    }
</style>
