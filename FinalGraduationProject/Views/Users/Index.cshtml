@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container my-5">
    <h1 class="mb-4 text-center">👥 Manage Users</h1>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover align-middle shadow-sm rounded">
            <thead class="table-dark">
                <tr>
                    <th class="p-3">Email</th>
                    <th class="p-3">Roles</th>
                    <th class="p-3">Status</th>
                    <th class="p-3 text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    var roles = await UserManager.GetRolesAsync(user);
                    bool isAdmin = roles.Contains("Admin");
                    bool isBlocked = user.LockoutEnd != null && user.LockoutEnd > DateTimeOffset.Now;

                    <tr>
                        <td class="fw-bold p-3">@user.Email</td>
                        <td class="p-3">
                            <span class="px-1">
                                @string.Join(", ", roles)
                            </span>
                        </td>

                        <td class="p-3">
                            @if (isBlocked)
                            {
                                <span class="badge bg-danger px-3 py-2">
                                    <i class="fas fa-ban me-1"></i> Blocked
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-success px-3 py-2">
                                    <i class="fas fa-check-circle me-1"></i> Active
                                </span>
                            }
                        </td>
                        <td class="text-center p-3">
                            <div class="d-flex flex-wrap gap-2 justify-content-center">

                                <!-- زرار Make/Remove Admin -->
                                <form asp-action="@(isAdmin ? "RemoveAdmin" : "MakeAdmin")" asp-route-id="@user.Id" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn @(isAdmin ? "bbtn-success" : "btn-success") btn-sm d-flex align-items-center">
                                        <i class="fas @(isAdmin ? "fa-user-minus" : "fa-user-shield") me-1"></i>
                                        <span>@(isAdmin ? "Remove Admin" : "Make Admin")</span>
                                    </button>
                                </form>

                                <!-- زرار Block/Unblock -->
                                <form asp-action="@(isBlocked ? "Unblock" : "Block")" asp-route-id="@user.Id" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn @(isBlocked ? "btn-secondary" : "btn-success") btn-sm d-flex align-items-center">
                                        <i class="fas @(isBlocked ? "fa-unlock" : "fa-lock") me-1"></i>
                                        <span>@(isBlocked ? "Unblock" : "Block")</span>
                                    </button>
                                </form>

                                <!-- زرار Delete -->
                                <form asp-action="Delete" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Are you sure?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger btn-sm d-flex align-items-center">
                                        <i class="fas fa-trash me-1"></i>
                                        <span>Delete</span>
                                    </button>
                                </form>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- FontAwesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
