@model FinalGraduationProject.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<div class="container py-5">
    <h2 class="fw-bold text-primary mb-4">@ViewData["Title"]</h2>
    <div class="card shadow p-4">
        <div class="row">
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name" />
                }
                else
                {
                    <div class="bg-light text-center py-5 rounded">No Image</div>
                }
            </div>
            <div class="col-md-8">
                <h3 class="mb-3">@Model.Name</h3>
                <p><strong>Brand:</strong> @Model.Brand?.Name</p>
                <p><strong>Category:</strong> @Model.Category?.Name</p>
                <p><strong>Price:</strong> $@Model.Price.ToString("F2")</p>
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Gender:</strong> @Model.Gender</p>
                <p><strong>Size:</strong> @Model.ProductSizes</p>
                <p><strong>Color:</strong> @Model.Color</p>
                <p>
                    <strong>Status:</strong>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </p>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>