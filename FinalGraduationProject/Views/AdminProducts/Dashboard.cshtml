@model dynamic
@{
    ViewData["Title"] = "Admin Dashboard";
    var recentOrders = ViewBag.RecentOrders as IEnumerable<dynamic>;
}

<div class="container py-5">
    <!-- Title -->
    <h2 class="fw-bold text-center dashboard-title mb-5">
        <i class="fas fa-tachometer-alt me-2"></i>@ViewData["Title"]
    </h2>

    <!-- Stats Cards -->
    <div class="row g-4 mb-5 text-center">
        <div class="col-md-3 scroll-animate">
            <div class="card dashboard-card h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h5 class="fw-bold">Users</h5>
                    <p class="display-6 fw-bold">@ViewBag.UserCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 scroll-animate">
            <div class="card dashboard-card h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <i class="fas fa-receipt fa-3x text-success mb-3"></i>
                    <h5 class="fw-bold">Orders</h5>
                    <p class="display-6 fw-bold">@ViewBag.OrderCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 scroll-animate">
            <div class="card dashboard-card h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <i class="fas fa-box fa-3x text-info mb-3"></i>
                    <h5 class="fw-bold">Products</h5>
                    <p class="display-6 fw-bold">@ViewBag.ProductCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 scroll-animate">
            <div class="card dashboard-card h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <i class="fas fa-dollar-sign fa-3x text-warning mb-3"></i>
                    <h5 class="fw-bold">Total Sales</h5>
                    <p class="display-6 fw-bold">$@ViewBag.TotalSales</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Links -->
    <div class="row g-4 mb-5 text-center">
        <div class="col-md-4 scroll-animate">
            <div class="card dashboard-card h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <i class="fas fa-users-cog fa-3x text-primary mb-3"></i>
                    <h4 class="fw-bold">Manage Users</h4>
                    <p>View, edit, and manage all registered users.</p>
                    <a asp-controller="Users" asp-action="Index" class="btn btn-primary w-100 btn-glow">
                        <i class="fas fa-arrow-right me-2"></i> Go to Users
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 scroll-animate">
            <div class="card dashboard-card h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <i class="fas fa-boxes fa-3x text-info mb-3"></i>
                    <h4 class="fw-bold">Manage Products</h4>
                    <p>Add, edit, or remove products from your store.</p>
                    <a asp-controller="AdminProducts" asp-action="Index" class="btn btn-info w-100 btn-glow">
                        <i class="fas fa-arrow-right me-2"></i> Go to Products
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 scroll-animate">
            <div class="card dashboard-card h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <i class="fas fa-shopping-cart fa-3x text-success mb-3"></i>
                    <h4 class="fw-bold">Manage Orders</h4>
                    <p>Track, update, and manage customer orders.</p>
                    <a asp-controller="Orders" asp-action="Manage" class="btn btn-success w-100 btn-glow">
                        <i class="fas fa-arrow-right me-2"></i> Go to Orders
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders Table -->
    <div class="card shadow-lg border-0 scroll-animate">
        <div class="card-header bg-gradient-primary text-white text-center">
            <h5 class="mb-0"><i class="fas fa-history me-2"></i>Recent Orders</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover table-borderless mb-0 text-center align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Order #</th>
                        <th>User</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.RecentOrders != null)
                    {
                        foreach (var order in ViewBag.RecentOrders)
                        {
                            <tr class="hover-row">
                                <td>@order.Id</td>
                                <td>@order.UserEmail</td>
                                <td>@order.OrderDate.ToShortDateString()</td>
                                <td>
                                    <span class="badge px-3 py-2 @(order.Status == "Completed" ? "bg-success" : order.Status == "Pending" ? "bg-warning text-dark" : "bg-secondary")">
                                        @order.Status
                                    </span>
                                </td>
                                <td>$@order.Total</td>
                                <td>
                                    <a asp-controller="Orders" asp-action="AdminDetails" asp-route-id="@order.Id"
                                       class="btn btn-sm btn-outline-primary btn-glow">
                                        <i class="fas fa-eye me-1"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">No recent orders found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
    body {
        background: #f4f7fc;
    }

    .dashboard-title {
        animation: fadeInDown 1s ease-in-out;
        color: #0d6efd;
        text-shadow: 0 0 10px rgba(13, 110, 253, 0.4);
    }

    .dashboard-card {
        border-radius: 1rem;
        transition: all 0.4s ease;
        background: #fff;
    }

        .dashboard-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 12px 30px rgba(0,0,0,0.1);
        }

    .btn-glow:hover {
        box-shadow: 0 0 12px rgba(0,0,0,0.2);
        transform: translateY(-2px);
    }

    .scroll-animate {
        opacity: 0;
        transform: translateY(40px);
        transition: all 0.8s ease;
    }

        .scroll-animate.show {
            opacity: 1;
            transform: translateY(0);
        }

    .bg-gradient-primary {
        background: linear-gradient(45deg, #0d6efd, #3a8efc);
    }

    .hover-row:hover {
        background: #eef5ff !important;
        transition: 0.3s;
    }
    @@keyframes fadeInDown {
        from

    {
        opacity: 0;
        transform: translateY(-20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<!-- Script for scroll animations -->
<script>
    document.addEventListener("DOMContentLoaded", () => {
        const elements = document.querySelectorAll(".scroll-animate");
        const observer = new IntersectionObserver(entries => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add("show");
                }
            });
        }, { threshold: 0.2 });
        elements.forEach(el => observer.observe(el));
    });
</script>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}
