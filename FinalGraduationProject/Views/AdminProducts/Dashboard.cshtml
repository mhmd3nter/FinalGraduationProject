@{
    ViewData["Title"] = "Admin Dashboard";
    var recentOrders = ViewBag.RecentOrders as IEnumerable<dynamic>;
}
<div class="container py-5">
    <h2 class="fw-bold text-primary mb-4">@ViewData["Title"]</h2>
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center shadow">
                <div class="card-body">
                    <h5 class="card-title">Users</h5>
                    <p class="display-6 fw-bold">@ViewBag.UserCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow">
                <div class="card-body">
                    <h5 class="card-title">Orders</h5>
                    <p class="display-6 fw-bold">@ViewBag.OrderCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow">
                <div class="card-body">
                    <h5 class="card-title">Products</h5>
                    <p class="display-6 fw-bold">@ViewBag.ProductCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow">
                <div class="card-body">
                    <h5 class="card-title">Total Sales</h5>
                    <p class="display-6 fw-bold">$@ViewBag.TotalSales</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Links -->
    <div class="row mb-5">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-users-cog fa-3x text-primary mb-3"></i>
                    <h4>Manage Users</h4>
                    <p>View, edit, and manage all registered users.</p>
                    <a asp-area="" asp-controller="Users" asp-action="Index" class="btn btn-primary w-100">Go to Users</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-boxes fa-3x text-info mb-3"></i>
                    <h4>Manage Products</h4>
                    <p>Add, edit, or remove products from your store.</p>
                    <a asp-area="" asp-controller="Adminproducts" asp-action="Index" class="btn btn-info w-100">Go to Products</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-shopping-cart fa-3x text-success mb-3"></i>
                    <h4>Manage Orders</h4>
                    <p>Track, update, and manage customer orders.</p>
                    <a asp-area="" asp-controller="Orders" asp-action="Manage" class="btn btn-success w-100">Go to Orders</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders Table -->
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Recent Orders</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead>
                    <tr>
                        <th>Order #</th>
                        <th>User</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.RecentOrders != null)
                    {
                        foreach (var order in ViewBag.RecentOrders)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.UserEmail</td>
                                <td>@order.OrderDate.ToShortDateString()</td>
                                <td>
                                    <span class="badge @(order.Status == "Completed" ? "bg-success" : order.Status == "Pending" ? "bg-warning" : "bg-secondary")">
                                        @order.Status
                                    </span>
                                </td>
                                <td>$@order.Total</td>
                                <td>
                                    <a asp-area="" asp-controller="Orders" asp-action="AdminDetails" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">View</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">No recent orders found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}