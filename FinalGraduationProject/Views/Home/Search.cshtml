@model SearchResultVM

@{
    ViewData["Title"] = "Search Results";
}
<div class="product_page" id="ProductView">
    <div class="container mt-4" style="margin-bottom:50px">
        <h2 class="mb-4">Search Results</h2>

        @if (ViewData["SearchMessage"] != null)
        {
            <div class="alert alert-info text-center">
                <strong>@ViewData["SearchMessage"]</strong>
            </div>
        }

        @if (Model.Products == null || !Model.Products.Any())
        {
            <div class="alert alert-warning text-center">
                <strong>No products found.</strong>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var product in Model.Products)
                {
                    <div class="col-md-4 col-lg-3">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" asp-fragment="ProductView" class="card-link-wrapper">
                            <div class="card h-100 shadow-sm card-hover">
                                <img src="@Url.Content(product.ImageUrl)" class="card-img-top flex-img" alt="@product.Name">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text text-success fw-bold">@product.Price $</p>
                                    <p class="card-text text-muted">
                                        <strong>Brand:</strong>
                                        @if (!string.IsNullOrEmpty(product.Brand?.Name))
                                        {
                                            @product.Brand.Name
                                        }
                                        else
                                        {
                                            <span class="text-danger">No brand</span>
                                        }
                                        <br />
                                        <strong>Category:</strong>
                                        @if (!string.IsNullOrEmpty(product.Category?.Name))
                                        {
                                            @product.Category.Name
                                        }
                                        else
                                        {
                                            <span class="text-danger">No category</span>
                                        }
                                    </p>
                                    <p class="card-text text-muted">
                                        <strong>Color:</strong> @product.Color
                                    </p>
                                    <p class="card-text">
                                        <strong>Description:</strong> @product.Description
                                    </p>
                                    <p class="card-text">
                                        <strong>Sizes:</strong>
                                        @{
                                            var sizes = product.ProductSizes?.Select(ps => ps.Size?.Name).Where(n => !string.IsNullOrEmpty(n)).ToList();
                                            if (sizes != null && sizes.Any())
                                            {
                                                @string.Join(", ", sizes)
                                            }
                                            else
                                            {
                                                <span class="text-danger">No sizes available</span>
                                            }
                                        }
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
    </div>

    <style>
        .card-link-wrapper {
            text-decoration: none;
            color: inherit;
            display: block;
        }

        .card-hover {
            transition: box-shadow 0.2s, transform 0.2s;
        }

        .card-link-wrapper:hover .card-hover {
            box-shadow: 0 0 0.75rem #007bff33;
            transform: translateY(-4px) scale(1.02);
            cursor: pointer;
        }

        .flex-img {
            width: 100%;
            height: auto;
            object-fit: contain;
            display: block;
            margin-left: auto;
            margin-right: auto;
            max-height: 350px;
        }

        .card {
            display: flex;
            flex-direction: column;
            align-items: stretch;
            min-height: 0;
        }
    </style>
</div>