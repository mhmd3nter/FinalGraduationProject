@model IEnumerable<FinalGraduationProject.Models.Product>

@{
    ViewData["Title"] = "Home";
}
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    var isAdmin = User.IsInRole("Admin");
}
<section>
    <!-- ... Slider section remains unchanged ... -->
</section>

<section class="features" style="position:relative; margin-top: -100px; z-index: 2;">
    <!-- ... Feature boxes remain unchanged ... -->
</section>

<main class="page py-5" style="background:#f8f9fa;">
    <div class="container">
        <!-- عنوان الصفحة -->
        <div class="text-center mb-5">
            <h1 class="fw-bold text-primary">Welcome to Our Store</h1>
            <p class="text-muted">Discover our latest products and best offers</p>
        </div>

        <!-- شبكة المنتجات -->
        <div class="product-grid row g-4">
            @foreach (var item in Model)
            {
                var stock = item.ProductSizes.Sum(ps => ps.Quantity);

                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 border-0 shadow-sm rounded-3 product-card">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id" class="d-block overflow-hidden">
                            <img src="@Url.Content(item.ImageUrl)"
                                 alt="@item.Name"
                                 class="card-img-top img-fluid"
                                 style="height:220px; object-fit:cover;" />
                        </a>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-1">
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id"
                                   class="text-decoration-none text-dark fw-semibold">
                                    @item.Name
                                </a>
                            </h5>
                            <p class="card-text text-muted small mb-2">
                                @item.Brand?.Name | @item.Category?.Name
                            </p>
                            <p class="mb-2">
                                <strong class="text-primary">$@item.Price</strong>
                            </p>

                            <div class="small mb-2">
                                <strong>Sizes:</strong> @string.Join(", ", item.ProductSizes.Select(ps => ps.Size.Name))<br />
                                <strong>Color:</strong> @item.Color
                            </div>

                            <!-- ✅ حالة الستوك -->
                            <div class="mb-2">
                                @if (stock == 0)
                                {
                                    <span class="badge bg-danger">Out of Stock</span>
                                }
                                else if (stock < 5)
                                {
                                    <span class="badge bg-warning text-dark">Low Stock: @stock left</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">In Stock: @stock</span>
                                }
                            </div>

                            <!-- ✅ زر العرض أو المنع -->
                            <div class="mt-auto">
                                @if (stock == 0)
                                {
                                    <button class="btn btn-sm btn-secondary w-100" disabled>
                                        <i class="fas fa-ban"></i> Not Available
                                    </button>
                                }
                                else
                                {
                                    <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-primary w-100">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</main>

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    .product-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
        transition: all .3s ease;
    }
</style>
