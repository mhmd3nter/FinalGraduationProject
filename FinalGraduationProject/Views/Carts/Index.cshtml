@model IEnumerable<FinalGraduationProject.Models.CartItem>

<h1>🛒 Shopping Cart</h1>

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model == null || !Model.Any())
{
    <div class="text-center mt-5">
        <div class="mb-4">
            <i class="fas fa-shopping-cart" style="font-size: 5rem; color: #6c757d;"></i>
        </div>
        <h3 class="mt-3">Your cart is empty</h3>
        <p class="text-muted">
            Looks like you haven't added anything yet.<br />
            Start exploring and add products you love!
        </p>
        <a href="@Url.Action("Index", "Products")" class="btn btn-primary btn-lg mt-3">
            <i class="fas fa-shopping-bag"></i> Continue Shopping
        </a>
    </div>
}
else
{
    <!-- Enhanced Cart Design -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-shopping-cart"></i> Your Items</h5>
                </div>
                <div class="card-body p-0">
                    @foreach (var item in Model)
                    {
                        var stock = item.ProductSize?.Quantity ?? 0;
                        <div class="border-bottom p-3">
                            <div class="row align-items-center">
                                <div class="col-md-2">
                                    <img src="@(item.Product?.ImageUrl ?? "/images/placeholder.jpg")" 
                                         alt="@(item.Product?.Name ?? "Product")" 
                                         class="img-fluid rounded cart-item-image" 
                                         style="max-height: 80px; object-fit: cover;">
                                </div>
                                <div class="col-md-3">
                                    <h6 class="mb-1">@(item.Product?.Name ?? "Unknown Product")</h6>
                                    <small class="text-muted">@(item.Product?.Brand?.Name ?? "Unknown Brand")</small>
                                    <br />
                                    <small class="text-muted">@(item.Product?.Description ?? "")</small>
                                    <br />
                                    <span>
                                        <strong>Color:</strong> @(item.Product?.Color ?? "N/A")
                                    </span>
                                    <br />
                                    <span>
                                        <strong>Size:</strong> @(item.ProductSize?.Size?.Name ?? "N/A")
                                    </span>
                                    <br />
                                    @if (stock > 0)
                                    {
                                        <small class="text-success">
                                            <i class="fas fa-check-circle"></i> In Stock: @stock items
                                        </small>
                                    }
                                    else
                                    {
                                        <small class="text-danger">
                                            <i class="fas fa-times-circle"></i> Out of Stock
                                        </small>
                                    }
                                </div>
                                <div class="col-md-2 text-center">
                                    <strong class="text-primary">$@(item.Product?.Price ?? 0)</strong>
                                </div>
                                <div class="col-md-3">
                                    <div class="d-flex align-items-center justify-content-center quantity-control">
                                        @if (item.Quantity > 1)
                                        {
                                            <form asp-controller="Carts" asp-action="UpdateQuantity" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="cartItemId" value="@item.Id" />
                                                <button type="submit" name="change" value="-1" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-minus"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-controller="Carts" asp-action="RemoveFromCart" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="cartItemId" value="@item.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger" 
                                                        title="Remove item">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        }

                                        <!-- Editable Quantity Input -->
                                        <form asp-controller="Carts" asp-action="UpdateQuantityDirect" method="post" class="d-inline mx-2">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="cartItemId" value="@item.Id" />
                                            <input type="number" name="newQuantity" value="@item.Quantity" 
                                                   min="1" max="@stock" 
                                                   class="form-control text-center fw-bold quantity-input no-spinner" 
                                                   style="width: 70px; display: inline-block;"
                                                   onchange="this.form.submit()" 
                                                   title="Enter quantity (max: @stock)" />
                                        </form>

                                        <form asp-controller="Carts" asp-action="UpdateQuantity" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="cartItemId" value="@item.Id" />
                                            <button type="submit" name="change" value="1" 
                                                    class="btn btn-sm btn-outline-success"
                                                    @(item.Quantity >= stock || stock == 0 ? "disabled" : "")>
                                                <i class="fas fa-plus"></i>
                                            </form>
                                        </div>
                                </div>
                                <div class="col-md-2 text-center">
                                    <strong class="text-success fs-5">
                                        $@((item.Product?.Price ?? 0) * item.Quantity)
                                    </strong>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-lg-4">
            <div class="card shadow-sm cart-summary">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-calculator"></i> Order Summary</h5>
                </div>
                <div class="card-body">
                    @{
                        var subtotal = Model.Where(item => item.Product != null)
                                           .Sum(item => item.Product.Price * item.Quantity);
                        var tax = subtotal * 0.14m;
                        var shipping = subtotal > 100 ? 0 : 10;
                        var total = subtotal + tax + shipping;
                        var totalItems = Model.Sum(item => item.Quantity);
                    }
                    
                    <div class="d-flex justify-content-between mb-2">
                        <span>Items (@totalItems):</span>
                        <span>$@subtotal.ToString("F2")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tax (14%):</span>
                        <span>$@tax.ToString("F2")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping:</span>
                        <span>
                            @if (shipping == 0)
                            {
                                <span class="text-success fw-bold">FREE</span>
                            }
                            else
                            {
                                <span>$@shipping.ToString("F2")</span>
                            }
                        </span>
                    </div>
                    
                    <!-- Free Shipping Progress -->
                    @if (subtotal < 100 && subtotal > 0)
                    {
                        var remainingForFreeShipping = 100 - subtotal;
                        var progressPercentage = (subtotal / 100) * 100;
                        
                        <div class="mt-3 mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <small class="text-info">
                                    <i class="fas fa-truck"></i> Free shipping progress
                                </small>
                                <small class="text-info fw-bold">
                                    $@remainingForFreeShipping.ToString("F2") more needed
                                </small>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar bg-info" 
                                     style="width: @progressPercentage.ToString("F0")%"></div>
                            </div>
                            <small class="text-muted">Add $@remainingForFreeShipping.ToString("F2") more for free shipping!</small>
                        </div>
                    }
                    
                    <hr>
                    <div class="d-flex justify-content-between fw-bold h5 text-primary">
                        <span>Total:</span>
                        <span>$@total.ToString("F2")</span>
                    </div>
                </div>
                
                <!-- Checkout Button -->
                <div class="card-footer">
                    <div class="d-grid gap-2">
                        <form asp-action="Checkout" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success btn-lg w-100" @(subtotal <= 0 ? "disabled" : "")>
                                <i class="fas fa-credit-card"></i> Proceed to Checkout
                            </button>
                        </form>
                        <a href="@Url.Action("Index", "Products")" class="btn btn-outline-primary w-100">
                            <i class="fas fa-arrow-left"></i> Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
