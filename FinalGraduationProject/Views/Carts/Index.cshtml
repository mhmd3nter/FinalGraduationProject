@model IEnumerable<FinalGraduationProject.Models.CartItem>

<h1>Shopping Cart</h1>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Available Stock</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var stock = item.Product?.Inventory?.QuantityAvailable ?? 0;
            <tr>
                <td>@item.Product.Name</td>
                <td>$@item.Product.Price</td>
                <td>
                    <div class="d-flex align-items-center">
                        @if (item.Quantity > 1)
                        {
                            <form asp-controller="Carts" asp-action="UpdateQuantity" method="post" class="d-inline">
                                <input type="hidden" name="cartItemId" value="@item.Id" />
                                <button type="submit" name="change" value="-1" class="btn btn-sm btn-outline-danger">-</button>
                            </form>
                        }
                        else
                        {
                            <form asp-controller="Carts" asp-action="RemoveFromCart" method="post" class="d-inline">
                                <input type="hidden" name="cartItemId" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        }

                        <span class="mx-2">@item.Quantity</span>

                        <form asp-controller="Carts" asp-action="UpdateQuantity" method="post" class="d-inline">
                            <input type="hidden" name="cartItemId" value="@item.Id" />
                            <button type="submit" name="change" value="1" class="btn btn-sm btn-outline-success"
                                    @(item.Quantity >= stock ? "disabled" : "")>
                                +
                            </button>
                        </form>
                    </div>

                    <div class="mt-4 d-flex justify-content-end">
                        <form asp-action="Checkout" method="post">
                            <button type="submit" class="btn btn-success btn-lg">
                                🛒 Proceed to Shipping
                            </button>
                        </form>
                    </div>

                </td>
                <td>@stock</td>
                <td>$@(item.Product.Price* item.Quantity)</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>
