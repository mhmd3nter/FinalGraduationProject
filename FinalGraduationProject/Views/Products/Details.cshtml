@model FinalGraduationProject.Models.Product

<h2>@Model.Name</h2>
<img src="@Url.Content(Model.ImageUrl)" alt="Model.Name" class="img-fluid">
<p>@Model.Description</p>
<p><strong>Brand:</strong> @Model.Brand.Name</p>
<p><strong>Category:</strong> @Model.Category.Name</p>
<p><strong>Price:</strong> $@Model.Price</p>
<p><strong>Color:</strong> @Model.Color</p>

<form asp-controller="Carts" asp-action="AddToCart" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="productId" value="@Model.Id" />
    <input type="hidden" name="quantity" value="1" />

    <div class="mb-3">
        <label for="productSizeId" class="form-label">Size</label>
        <select name="productSizeId" id="productSizeId" class="form-select" required>
            <option value="">Select Size</option>
            @foreach (var ps in Model.ProductSizes)
            {
                <option value="@ps.Id">@ps.Size.Name</option>
            }
        </select>
    </div>


    <button type="submit" class="btn btn-primary">Add to Cart</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>