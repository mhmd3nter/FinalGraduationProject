@model IEnumerable<FinalGraduationProject.Models.Product>

@{
    ViewData["Title"] = "Products";
}
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    var isAdmin = User.IsInRole("Admin");
}



<h1>Products</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>



    <div class="product-grid row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5">

        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <img src="@Url.Content(item.ImageUrl)" alt="@item.Name" class="img-fluid">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark">
                                @item.Name
                            </a>
                        </h5>
                        <p class="card-text text-muted">@item.Brand.Name | @item.Category.Name</p>
                        <p class="card-text"><strong>$@item.Price</strong></p>
                        <div>
                            <strong>Sizes:</strong>
                            @string.Join(", ", item.ProductSizes.Select(ps => ps.Size.Name))
                            <br />
                            <strong>Color:</strong> @item.Color
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
